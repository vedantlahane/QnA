# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Configuration (Optional - for monitoring and debugging)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=qna-agent-graph

# Database Configuration (Optional)
DATABASE_URL=sqlite:///./data/qna.db

# Application Configuration
APP_NAME=QnA Agent Graph
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# File Upload Configuration
MAX_FILE_SIZE_MB=100
MAX_BATCH_SIZE_MB=200
UPLOAD_DIR=./uploads
VECTOR_STORE_PATH=./vector_store

# Security Configuration
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis Configuration (Optional - for caching and session management)
REDIS_URL=redis://localhost:6379

# Monitoring Configuration (Optional)
SENTRY_DSN=your_sentry_dsn_here
