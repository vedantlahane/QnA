# Django Configuration
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
# Leave empty for SQLite (default: db.sqlite3 in backend folder)
DATABASE_URL=

# SQLite specific settings (optional)
SQLITE_DB_NAME=db.sqlite3
SQLITE_DB_PATH=

# CORS Configuration
FRONTEND_ORIGINS=http://localhost:5173,http://localhost:5174,https://your-frontend-domain.com

# CSRF Trusted Origins (usually same as FRONTEND_ORIGINS)
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:5174,https://your-frontend-domain.com

# Static/Media file paths (optional, defaults provided)
STATIC_ROOT=
MEDIA_ROOT=

# API Keys (for AI features)
OPENAI_API_KEY=your-openai-api-key
TAVILY_API_KEY=your-tavily-api-key
LANGCHAIN_API_KEY=your-langchain-api-key

# LangSmith Configuration (optional, for debugging)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=axon
